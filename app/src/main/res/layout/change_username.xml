<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/confirmEntry"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:editable="true"
        android:text="Confirm Username"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Confirm Username:"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/userEntry" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Change Your Username:"
        tools:layout_editor_absoluteY="5dp"
        tools:layout_editor_absoluteX="126dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="New Username:"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/userEntry"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:editable="true"
        android:text="Enter New Username"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/usernameChange"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toBottomOf="@+id/confirmEntry" />

</android.support.constraint.ConstraintLayout>